<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:fitsSystemWindows="true"
    android:background="@color/bg_color"
    android:foregroundGravity="center"
    tools:context=".UI.FartActivity">

    <RelativeLayout
        android:id="@+id/animal"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/red"
                android:fontFamily="cursive"
                android:gravity="center"
                android:shadowColor="@android:color/black"
                android:singleLine="true"
                android:text="@string/fart_prank"
                android:textColor="@color/white"
                android:textSize="@dimen/_24ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </LinearLayout>

        <ImageView
            android:id="@+id/home_btn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"
            android:contentDescription="@string/app_name"
            android:padding="8dp"
            android:src="@drawable/icon_arrow_back"
            app:tint="@color/white" />
    </RelativeLayout>

    <TextView
        android:id="@+id/selectSound"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/dancing_script"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/select_sound"
        android:textColor="@color/red"
        android:textSize="@dimen/_20sdp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/animal" />

    <LinearLayout
        android:id="@+id/catLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:orientation="horizontal"
        android:weightSum="4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/selectSound">

        <androidx.cardview.widget.CardView
            android:id="@+id/sound1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:layout_weight="1"
            android:elevation="@dimen/_100sdp"
            app:cardCornerRadius="@dimen/_10sdp"
            app:cardElevation="@dimen/_100sdp"
            app:cardMaxElevation="@dimen/_10sdp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:weightSum="5">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="4"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/fart1" />

                <TextView
                    android:id="@+id/text_sound1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@color/red"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="@string/bubbles"
                    android:textColor="@color/white" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/sound2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:layout_weight="1"
            android:elevation="@dimen/_100sdp"
            app:cardCornerRadius="@dimen/_10sdp"
            app:cardElevation="@dimen/_100sdp"
            app:cardMaxElevation="@dimen/_10sdp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:weightSum="5">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="4"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/fart2" />

                <TextView
                    android:id="@+id/text_sound2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@color/red"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="@string/poop"
                    android:textColor="@color/white" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/sound3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:layout_weight="1"
            android:elevation="@dimen/_100sdp"
            app:cardCornerRadius="@dimen/_10sdp"
            app:cardElevation="@dimen/_100sdp"
            app:cardMaxElevation="@dimen/_10sdp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:weightSum="5">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="4"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/fart3" />

                <TextView
                    android:id="@+id/text_sound3"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@color/red"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="@string/wet_fart"
                    android:textColor="@color/white" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/sound4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:layout_weight="1"
            android:elevation="@dimen/_100sdp"
            app:cardCornerRadius="@dimen/_10sdp"
            app:cardElevation="@dimen/_100sdp"
            app:cardMaxElevation="@dimen/_10sdp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:weightSum="5">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="4"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/fart4" />

                <TextView
                    android:id="@+id/text_sound4"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@color/red"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="@string/dripping"
                    android:textColor="@color/white" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/dancing_script"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/tap_and_hold_to_play_sounds"
        android:textColor="@color/red"
        android:textSize="@dimen/_16ssp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/catLayout" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lott"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/volumeLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/catLayout"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/glowing"
        app:lottie_speed="1"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/imagehiorn"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_200sdp"
        android:contentDescription="@string/app_name"
        android:foregroundGravity="center"
        app:layout_constraintBottom_toTopOf="@id/volumeLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/catLayout" />

    <ImageView
        android:id="@+id/loopImage"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_200sdp"
        android:contentDescription="@string/app_name"
        android:foregroundGravity="center"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/volumeLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/catLayout" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/loopButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:background="@drawable/select_card"
        android:padding="@dimen/_5sdp"
        android:singleLine="true"
        android:textColor="@color/red"
        app:layout_constraintBottom_toTopOf="@id/volumeLayout"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/volumeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/_5sdp"
        android:paddingVertical="@dimen/_10sdp"
        android:weightSum="10"
        app:layout_constraintBottom_toTopOf="@id/adLine">

        <ImageView
            android:id="@+id/volumeLow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_volume_down" />

        <SeekBar
            android:id="@+id/seekbar1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_20sdp"
            android:layout_weight="8"
            android:progressDrawable="@drawable/seekbar_bg"
            android:splitTrack="false"
            android:thumb="@drawable/thumb_bg"
            android:thumbOffset="0dp"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/volumeUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_volume_up" />

    </LinearLayout>

    <View
        android:id="@+id/adLine"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black"
        app:layout_constraintBottom_toTopOf="@id/adaptiveFart" />

    <FrameLayout
        android:id="@+id/adaptiveFart"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_gravity="bottom"
        android:layout_weight="1"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/ad_is_loading" />
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>